.general_info {
  width: 90%;
}

.msgInput {
  border-width: 1px;
  border-color: #CCCCCC;
  border-style: solid;
  background-color: #FFFFFF;
  height: 20vh;
  width: 93%;
  padding: 0 10rpx;
  text-align: left;
  margin: 0 auto;
}

.btnA {
  background: #DA1A21;
  border-radius: 10px;
  font-weight: bold;
  color: #ffffff;
  text-decoration: none;
  font-size: 16px !important;
  width: 65%;
  padding: 5px;
  margin: 3% auto;
}

.sent_tab {
  width: 100%;
  font-weight: bold;
  text-align: center;
  padding-top: 6vh;
}

.contact_form {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.contact_form label{
  display: block;
  font-weight: bold;
  font-size: 25rpx;
  margin-left: 20rpx;
}
select{
  margin: 0 0 0 1.5%;
  width: 96%;
}
bullet-row{
  margin-top: 15rpx;
}