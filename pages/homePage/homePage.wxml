<page-meta>
  <navigation-bar title="{{nbTitle}}" loading="{{nbLoading}}" front-color="{{nbFrontColor}}"
    background-color="{{nbBackgroundColor}}" color-animation-duration="2000" color-animation-timing-func="easeIn" />
</page-meta>

<view class="self_info">
  <view class="photo">
    <image src="{{photo}}" />
  </view>
  <view class="info_field first">
    <label for="">Man</label>
    <label for="">ID:007</label>
  </view>
  <view class="info_field last">
    <label for="">Points</label>
    <label for="">100</label>
  </view>
</view>
<view class="take_survey">
  <view class="caption">
    <label>Do surveys earn points!</label>
    <label class="attention">100 Point coins = 10 CNY </label>
    <button bindtap="showActionSheet" class=".btn_normal">Take Survey</button>
  </view>
</view>
<view class="dashboard">
  <view class="entry">My Profile</view>
  <view class="entry">Cash out</view>
  <view class="entry" style="line-height:4vh;">Completed Surveys</view>
  <view class="entry">FAQ</view>
</view>

<action-sheet hidden="{{actionsheethidden}}">

  <block>
    <action-sheet-item bindtap="bind{{menu1}}">
      Add to Desktop
    </action-sheet-item>
  </block>
  <block>
    <action-sheet-item bindtap="bind{{menu2}}">
      About Money Cat
    </action-sheet-item>
  </block>
  <block>
    <action-sheet-item bindtap="bind{{menu3}}">
      Cancel
    </action-sheet-item>
  </block>

  <!-- <action-sheet-cancel>
    Cancel
  </action-sheet-cancel> -->

</action-sheet>
<tabBar></tabBar>