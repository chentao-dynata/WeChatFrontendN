/* pages/homePage/homePage.wxss */
action-sheet-item{
  text-align:left;
  padding-left: 10vw;
}

.self_info{
  height: 20vh;
  background-color: rgb(29, 106, 173);
  padding:8vh 2vh 0 4vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.self_info .photo{
  background-color: grey;
  height: 10vh;
  width: 10vh;
  border-top-right-radius: 20vh;
  border-top-left-radius: 20vh;
  border-bottom-right-radius: 20vh;
  border-bottom-left-radius: 20vh;
  text-align: center;
  vertical-align: middle;
  overflow: hidden;
}
.self_info .photo image{
  width: 10vh;
  height: 10vh;
}

.info_field{
  color: white;
}
.info_field label{
  display: block;
}
.info_field .last{
  flex-direction:row-reverse
}

.take_survey{
  width: 100%;
  display: flex;
}

.take_survey .caption{
  padding: 0 10%;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.take_survey .caption button{
  margin: 4vh 0;
}

.take_survey .caption .attention{
  font-weight: bold;
  font-size: 35rpx;
}

.dashboard{
  display: flex;
  flex-direction: row;
  background-color: rgb(222, 222, 222);
  padding: 0 10%;
  flex-wrap: wrap;
  padding-bottom: 6vh;
}
.dashboard .entry{
  color: orange;
  line-height: 10vh;
  display: block;
  width: 40%;
  height: 10vh;
  background-color: white;
  text-align: right;
  margin: 4vh auto;
  border-radius: 2vh;
  padding-right: 1vh;
}
.dashboard .entry::before{
  content: "$$$";
}