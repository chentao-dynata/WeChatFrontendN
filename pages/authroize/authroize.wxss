/* pages/authroize/authroize.wxss */

.actions{
  display: flex;
  flex-direction: column;
  background-color: cornflowerblue;
  border-top-right-radius: 10vh;
  width: 100%;
  padding-top:5%;
  padding-bottom: 5%;
}
button{
  margin:15px;
}

.actions label{
  display: block;
  width: 80%;
  color: white;
  text-align: center;
  margin: 2px auto;
}

.app-button{
  background-color: cornflowerblue;
  color: white;
  border-top-left-radius: 2vh;
  border-bottom-right-radius: 2vh;
  border:1px solid white;
  width: 85%;
  
}
.app-button-red::before{
  content:"wx";
  font-size: 10px;
  color:blue;
}
.app-button-red{
  background-color: red;
  color: white;
  border-top-left-radius: 2vh;
  border-bottom-right-radius: 2vh;
}
