/* pages/postPageCashout/postPageCashout.wxss */
.current_coin {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 30vh;
  background-color: rgb(60, 135, 198);
  color: white;
}

.current_coin .info {
  margin: 10vh auto;
  display: flex;
}

.current_coin .info .total {
  padding: 2vh 2vh;
}

.current_coin .info .total .points {
  font-weight: bold;
  font-size: 80rpx;
}

.current_coin label {
  display: block;
}

.current_coin .pig {
  width: 16vh;
  height: 16vh;
  background-color: white;
  border-radius: 8vh;
}


.cashout_amount {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.cashout_amount label,.cashout_amount input {
  display: block;
  text-align: center;
  margin: 3vh auto;

}

.cashout_amount input{
  height: 100rpx;
  border:1px solid black;
  width: 80%;
  display: block;
}