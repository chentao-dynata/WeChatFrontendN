<page-meta>
  <navigation-bar title="Join Prepage" />
</page-meta>
<page-header></page-header>
<view class="caption">
  <label class="title">Please fill in the below information.</label>
  <label class="content">More surveys will be assigned by filling in the info below. Meaning more chance to earn points!
  </label>
</view>
<view class="container pre_form">
  <datepicker filedVal="{{birthday}}" bindchange="pickerchange">
  </datepicker>
  <!-- <input type="text" placeholder="Enter your date of birth" bindfocus="showpicker" value="{{birthday}}" /> -->
  <input type="text" placeholder="Enter your post code" />
  <input type="text" placeholder="Select your education" />
  <input type="text" placeholder="Select your employment status" />
  <button class="btn" bindtap="gotoJoinSendEmail">Next</button>
  <wizard ringIndex="1"></wizard>
</view>