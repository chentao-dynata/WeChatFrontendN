/* pages/joinPrePage/joinPrePage.wxss */
.caption{
  text-align: left;
  padding-left: 40rpx;
}
.caption label{
  display: block;
  width: 65%;
}
.caption .title{
  font-weight: bold;
  font-size:35rpx;
}
.caption .content{
  font-size:25rpx;
}


.pre_form{
  color:black;
  background-color: rgb(60, 135, 198);
  border-top-right-radius: 100rpx;
  padding:50rpx 0;
}

.pre_form datepicker,.pre_form arraypicker{
  width: 80%;
}

.pre_form input{
  background-color: white;
  height: 6vh;
  width: 80%;
  margin-top: 4vh;
  text-align: center;
}
.pre_form .btn{
  margin-top: 4vh;
  background-color: red;
  width: 80%;
  color: white;
  border-top-left-radius: 3vh;
  border-bottom-right-radius: 3vh;
}
.pre_form label{
  color:white;
  margin:1vh auto;
  font-size: 25rpx;
  display: block;
}
.pre_form navigator{
  color:white;
  text-decoration:underline;
}
.hidden{
  display: none;
}