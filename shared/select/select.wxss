/* shared/select/select.wxss */
.select {
  width: 100%;
  position: relative;
  margin: 1vh auto;
  font-size: 30rpx;
}

.opts {
  border: 1px solid rgb(233, 237, 238);
  height: 4vh;
  display: block;
  color: rgb(123, 123, 123);
  padding-left: 1vh;
  box-shadow: 1px 1px 1px #888888;
}

.opt {
  position: absolute;
  z-index: 99999999;
  width: 99%;
  background: white;
  height: 20vh;
  overflow-y: scroll;
  border: 1rpx solid rgb(123, 123, 123);
}

.opt .item,.opt .text {
  display: block;
  width: 100%;
  box-shadow: 1px 1px 1px #888888;
  height: 4vh;
  color: rgb(123, 123, 123);
  line-height: 4vh;
  margin-left: 5rpx;
}

.opt .item:hover {
  background-color: rgba(0, 0, 0, 0.8);
}