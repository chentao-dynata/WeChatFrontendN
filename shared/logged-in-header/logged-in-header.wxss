/* shared/logged-in-header/logged-in-header.wxss */

.self_info{
  height: 20vh;
  background-color: rgb(29, 106, 173);
  padding:8vh 2vh 0 4vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.self_info .left{
  display:flex;
  flex-direction: row;
}

.self_info .photo{
  background-color: grey;
  height: 10vh;
  width: 10vh;
  border-top-right-radius: 20vh;
  border-top-left-radius: 20vh;
  border-bottom-right-radius: 20vh;
  border-bottom-left-radius: 20vh;
  text-align: center;
  vertical-align: middle;
  overflow: hidden;
}
.self_info .photo image{
  width: 10vh;
  height: 10vh;
}

.self_info .info_field{
  margin:0 20rpx;
  color: white;
}
.self_info .info_field label{
  display: block;
}
.self_info .info_field .last{
  flex-direction:row-reverse
}
