.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.btn_normal{
  background-color: red;
  color: white;
  border-top-left-radius: 3vh;
  border-bottom-right-radius: 3vh;
}
.ow_container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  vertical-align: middle;
}

.hidden{
  display: none;
}
.show{
  display: '';
}